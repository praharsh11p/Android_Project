<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cube">

    <TextView
        android:id="@+id/cube_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="81dp"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:text="cube volume"
        app:layout_constraintBottom_toTopOf="@+id/cube_side"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cube_side"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="183dp"
        android:gravity="center"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:textColor="@color/black"
        android:hint="Enter the length of side"
        app:layout_constraintBottom_toTopOf="@+id/cube_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cube_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="196dp"
        android:gravity="center"
        android:textSize="40dp"
        android:fontFamily="@font/alegreya_sans_sc_extrabold"
        android:text="Result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cube_side"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cube_side" />

    <Button
        android:id="@+id/cube_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="calculate volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cube_side" />

</androidx.constraintlayout.widget.ConstraintLayout>